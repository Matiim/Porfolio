---
interface Props {
    college: string,
    image: string,
    degree: string,
    date: string,
    description: string,
}

const {college, image, degree, date, description } = Astro.props
---


<div class="mb-6">
    <div class="pb-5 flex flex-col md:flex-col md:mb-2 border-b border-gray-700">
        <div class="flex items-center gap-3">
            <img src={image} alt={college} class="w-12 h-12 rounded-xl object-cover" />
            <h3 class="text-lg font-bold text-blue-500">{college}</h3>
        </div>
        <div class="mt-3">
            <p class=" font-semibold text-gray-300">{degree}</p>
            <p class="text-gray-300">{date}</p>
        </div>
        <p class="mt-4 text-gray-300">{description}</p> 
    </div>
</div>